generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum TransactionType {
  INCOME
  OUTCOME
}

model Transaction {
  id        String      @id @default(uuid())
  description String
  type TransactionType
  category String
  price Int
  createdAt DateTime @default(now()) @map("created_at")

  @@map("transactions")
}
