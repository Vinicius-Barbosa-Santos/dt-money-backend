// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./src/database"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  INCOME
  OUTCOME
}

model Transaction {
  id        String      @id @default(uuid())
  description     String
  amount    Int
  category  String
  type      String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("transactions")
}
